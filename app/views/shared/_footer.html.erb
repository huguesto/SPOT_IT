<% if user_signed_in? %>
  <div class="footer">
    <div class="footer-links">
      <button type="button" class="connect" data-toggle="modal" data-target="#exampleModal2">
        Explore your friends spots
      </button>
    </div>
  </div>
  <% else %>
  <div class="footer">
    <div class="footer-links">
      <button type="button" class="connect" data-toggle="modal" data-target="#exampleModal">
        Connect for more spots</button>
    </div>
  </div>
<% end %>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <strong>Discover more spots !</strong>
        <!-- <h5 class="modal-title" id="exampleModalLabel"></h5> -->
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Let's find your friends go-to spotsüìç and share yours with Facebook Connect.
      </div>
      <div class="modal-footer">
        <% link_to "Sign out", destroy_user_session_path, class: "signout", method: "DELETE" %>
        <a href="/users/auth/facebook" role="button" class="signin">Connect</a>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <strong>Discover friends spots !</strong>
        <!-- <h5 class="modal-title" id="exampleModalLabel"></h5> -->
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Select a Facebook's friendü§ó  and discover his go-to spots.
      </div>
      <div class="friends">
        <div class="message">
          <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan">
          <div class="message-name">
            <h3>Gab Dehan</h3>
          </div>
          <div class="message-body">
            <p><strong>I am not sure yet!</strong></p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= link_to "Sign out", destroy_user_session_path, class: "signout", method: "DELETE" %>
      </div>
    </div>
  </div>
</div>
