<!-- Select a Facebook's friendðŸ¤—  and discover his go-to spots. -->
<% spots.each do |spot| %>
  <div class="friends">
    <div class="message">
      <%= image_tag spot.user.facebook_picture_url, class: "avatar-large" %>
      <div class="message-name">
        <h3><%= spot.user.first_name %></h3>
      </div>
      <div class="message-body">
         <div class="placelink"><%= link_to spot.place.name, place_path(spot.place_id) %></div>
        <!-- <p class="placelink"><%= spot.place.name %></p> -->
        <div class= "placecomment"> "<%= spot.comment %>"   <%= spot.created_at.strftime("%d/%m/%Y") %></div>
        <!-- <div class= "placedate"><%= spot.created_at.strftime("%d/%m/%Y") %></div> -->
      </div>
    </div>
  </div>
<%end%>
