<div class="spot-form">

      <%= simple_form_for(@place) do |f| %>
        <%= f.input :address, placeholder: "A cool spot, 17 Awesome St" %>
        <%= f.input :comment, placeholder: "In a few words", maxlength: 50 %>
        <%= f.input :photo, as: :attachinary %>
        <%= f.submit class: 'btn btn-primary' %>
        <%= f.submit ,'Spot it' %>
      <% end %>
</div>

<%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBNxB4fml5m_Quz39_7fXUAP7tXPvEmoKU&libraries=places"></script>
<% end %>

