

    <div class="spot-form">
      <%= simple_form_for(@spot) do |f| %>
      <label class="text-center fileUpload">
        <span class="upload btn btn-photo">add a photo</span>
        <%= f.input :photo, as: :attachinary, label: false, class: 'update'%></p>
      </label>

        <%= f.input :comment, as: :text, label: 'Add your comment', required: false, class: 'xxx' %>


        <select id="current-place" name="spot[place]" class="form-control"></select>

        <%= f.submit 'Spot it!', class: 'btn launch btn-search btn-block'%>
      <% end %>
    </div>


<% content_for(:after_js) do %>
  <script>
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        var pos = {
          lat: position.coords.latitude,
          lng: position.coords.longitude
        };
        var categories = ["restaurant"];

        var url = "/places/nearby?lat=" + pos.lat + "&lng=" + pos.lng +  "&category=" + categories;
        $.ajax({
          url: url,
          method: "GET",
          dataType: "json",
          success: function(data) {
            data.results.forEach(function(result) {
              $('#current-place').append("<option value='" + encodeURIComponent(JSON.stringify(result)) + "'>" + result.name + "</option>")
            })
          }
        });
      });
    }
  </script>
<% end %>
